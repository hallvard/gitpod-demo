<?xml version="1.0" encoding="UTF-8"?>
 
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="calc.CalcController">
 	<TextField fx:id="operand1Field" prefColumnCount="8" alignment="BOTTOM_RIGHT" editable="false" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="4"/>
 	<TextField fx:id="operatorField" prefColumnCount="1" alignment="BOTTOM_CENTER" editable="false" GridPane.rowIndex="1" GridPane.columnIndex="3"/>
 	<TextField fx:id="operand2Field" prefColumnCount="8" alignment="BOTTOM_RIGHT" editable="false" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="4"/>

 	<Button text="7" onAction="#appendToOperandString" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
 	<Button text="8" onAction="#appendToOperandString" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
 	<Button text="9" onAction="#appendToOperandString" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
 	<Button text="+" onAction="#setOperator" GridPane.columnIndex="3" GridPane.rowIndex="3"/>

 	<Button text="4" onAction="#appendToOperandString" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
 	<Button text="5" onAction="#appendToOperandString" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
 	<Button text="6" onAction="#appendToOperandString" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
 	<Button text="-" onAction="#setOperator" GridPane.rowIndex="4" GridPane.columnIndex="3"/>
 	
 	<Button text="1" onAction="#appendToOperandString" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
 	<Button text="2" onAction="#appendToOperandString" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
 	<Button text="3" onAction="#appendToOperandString" GridPane.rowIndex="5" GridPane.columnIndex="2"/>
 	<Button text=" " GridPane.rowIndex="5" GridPane.columnIndex="3"/>
 	
 	<Button text="0" onAction="#appendToOperandString" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
 	<Button text=" " GridPane.rowIndex="6" GridPane.columnIndex="1"/>
 	<Button text="=" onAction="#compute" GridPane.rowIndex="6" GridPane.columnIndex="2"/>
 	<Button text=" " GridPane.rowIndex="6" GridPane.columnIndex="3"/>
</GridPane>
